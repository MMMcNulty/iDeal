@using iDeal.Models
@model StatsView


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
     <div>
        <h1>Check out your latest stats!</h1>
        <table class="styled-table">
            <thead>
                <th>Number of Games Played:</th>
                <th>Win Percentage:</th>
                <th>Bust Percentage:</th>
                <th>Number Of Total Wins:</th>
            </thead>
            <tbody>
                <tr>
                        <td>@Model.NumberOfGamesPlayed</td>
                        <td>@Html.FormatValue(Model.WinPercentage, "{0:0.00}")%</td>
                        <td>@Html.FormatValue(Model.BustPercentage, "{0:0.00}")%</td>
                        <td>@Model.NumberOfTotalWins</td>
                </tr>
            </tbody>
        </table>
        <a href="/dashboard">Return to Dashboard</a>
    </div>
</body>
</html>